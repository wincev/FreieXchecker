<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/backgound_gadient">
    <ListView
            android:id="@+id/Lprice"
            android:layout_width="match_parent"
            android:layout_height="662dp" android:layout_above="@+id/TtextBal" android:layout_marginBottom="13dp">
    </ListView>
    <Button
            android:text="Check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Bcheck" android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp" android:layout_alignParentStart="true" android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp" android:layout_alignParentLeft="true"
            android:textColor="@color/white"/>
    <TextView
            android:text=""
            android:layout_width="133dp"
            android:layout_height="wrap_content" android:id="@+id/TtextBal" android:layout_toStartOf="@+id/Bconf"
            android:layout_marginRight="7dp" android:layout_marginEnd="7dp" android:layout_toLeftOf="@+id/Bconf"
            android:layout_above="@+id/TestBal" android:layout_marginBottom="5dp"
            android:textColor="@color/white"/>
    <Button
            android:text="Config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Bconf" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="14dp" android:layout_marginEnd="14dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="14dp"
            android:textColor="@color/white"/>
    <TextView
            android:text=""
            android:layout_width="136dp"
            android:layout_height="31dp" android:id="@+id/TestBal" android:layout_toStartOf="@+id/Bconf"
            android:layout_marginRight="5dp" android:layout_marginEnd="5dp" android:layout_toLeftOf="@+id/Bconf"
            android:layout_alignParentBottom="true" android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/Bcheck" android:layout_toRightOf="@+id/Bcheck" android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:textColor="@color/white"/>

</RelativeLayout>