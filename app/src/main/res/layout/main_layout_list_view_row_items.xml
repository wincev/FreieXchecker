<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
            android:id="@+id/ticker"
            android:layout_width="205dp"
            android:layout_height="wrap_content" android:layout_alignParentStart="true" android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
            android:textColor="@color/white"/>

    <TextView
            android:id="@+id/tickerPrice"
            android:layout_width="205dp"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="0dp" android:layout_marginEnd="0dp"
            android:textColor="@color/white"/>

</RelativeLayout>