<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@drawable/backgound_gadient">

    <Button
        android:id="@+id/btnChart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="14dp"
        android:text="Chart"
        android:textColor="@color/white"
        android:visibility="invisible" />
    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnReset" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="15dp" android:layout_marginEnd="15dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="14dp"
            android:textColor="@color/white"/>
    <TextView
            android:text="BTC Balance:"
            android:layout_width="144dp"
            android:layout_height="wrap_content" android:id="@+id/TviewBTC"
            android:layout_marginRight="22dp" android:layout_marginEnd="22dp"
            android:background="#D6C6AB"
            android:layout_marginLeft="39dp" android:layout_marginStart="39dp"
            android:layout_toEndOf="@+id/btnChart" android:layout_toRightOf="@+id/btnChart"
            android:layout_above="@+id/TbtcBal" android:layout_marginBottom="9dp"
            android:layout_toStartOf="@+id/btnReset" android:layout_toLeftOf="@+id/btnReset"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="638dp" android:id="@+id/Lpairs" android:layout_above="@+id/TviewBTC"
            android:layout_marginBottom="14dp">
    </ListView>
    <EditText
            android:text=""
            android:layout_width="172dp"
            android:layout_height="41dp" android:id="@+id/TbtcBal" android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp" android:layout_toStartOf="@+id/btnReset"
            android:layout_marginRight="12dp" android:layout_marginEnd="12dp" android:layout_toLeftOf="@+id/btnReset"
            android:layout_toEndOf="@+id/btnChart" android:layout_toRightOf="@+id/btnChart" android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:inputType="numberDecimal"
            android:textColor="@color/white"/>
</RelativeLayout>